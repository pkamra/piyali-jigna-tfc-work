{
  "openapi": "3.0.0",
  "info": {
    "title": "Bedrock Agent Action API",
    "version": "1.0.0",
    "description": "API to query the Bedrock Knowledge Base with a question and one or more LOB filters"
  },
  "paths": {
    "/ask": {
      "post": {
        "summary": "Ask a question to the Bedrock Agent",
        "description": "Receive a question and one or more LOB (line of business) filters, then return the response.",
        "operationId": "askQuestion",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "question": {
                    "type": "string",
                    "description": "The query to be sent to the knowledge base",
                    "minLength": 1
                  },
                  "lobs": {
                    "type": "array",
                    "description": "One or more Line of Business filters for the query",
                    "items": {
                      "type": "string"
                    },
                    "minItems": 1,
                    "example": ["Market Research", "Investment"]
                  }
                },
                "required": ["question", "lobs"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with the answer from the knowledge base",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "answer": {
                      "type": "string",
                      "description": "The response returned from the knowledge base"
                    }
                  }
                }
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
